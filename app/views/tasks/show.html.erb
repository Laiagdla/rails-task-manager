<h2>Details for: <%= @task.title %></h2>
<p><%= @task.details %></p>
<%# completed checkbox %>
<% if @task.completed %>
  <p>Completed</p>
<% else %>
  <p>Not completed</p>
<% end %>

<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Back", root_path %>

